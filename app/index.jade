  body

    .l-container
      .l-container__inner.o-flag
        .o-flag__body
          a(class='+u-inline-block' href='https://www.linkedin.com/in/simoneramo' alt='image simon eramo' title='i hate linkedin')
            img(class='o-img  --center  --circle  +u-mb-2  s-logo' src='../assets/images/site/simoneramo.png')
          h1 Designer & Front End Developer from Melbourne Australia
          ul(class='+u-unstyled  m-social-gallery')
            li.o-social-gallery__item.twitter
              a(class='+u-r-circle' href='https://twitter.com/simoneramo')
                img(src="../assets/images/social/twitter.svg", alt="Joomla SVG Icon")
