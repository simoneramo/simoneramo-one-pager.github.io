            li.o-social-gallery__item.gimmebar
              a(class='+u-r-circle' href='https://gimmebar.com/loves/simoneramo')
                img(src="../assets/images/social/gimmebar.svg", alt="Blogger SVG Icon")
                span(class='+u-visually-hidden') link to gimmiebar
            li.o-social-gallery__item.github
              a(class='+u-r-circle' href='https://github.com/simoneramo')
                img(src="../assets/images/social/github.svg", alt="Tumblr SVG Logo Icon")
                span(class='+u-visually-hidden') link to github
            li.o-social-gallery__item.instagram
              a(class='+u-r-circle' href='http://instagram.com/simon_eramo')
                img(src="../assets/images/social/instagram.svg", alt="Wordpress SVG Icon")
                span(class='+u-visually-hidden') link to instagram
            li.o-social-gallery__item.dribble
              a(class='+u-r-circle' href='https://dribbble.com/simoneramo')
                img(src="../assets/images/social/dribble.svg", alt="Squarespace SVG Icon")
                span(class='+u-visually-hidden') link to dribble

